                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:text="e"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="f"
                    android:onClick="click"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:text="f"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="g"
                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    android:text="g"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="h"
                    android:onClick="click"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:text="h"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="i"
                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    android:text="i"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="j"
                    android:onClick="click"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:text="j"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="k"
                    android:textAllCaps="false"
                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:text="k"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="l"

                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:text="l"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="m"
                    android:textAllCaps="false"
                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:text="m"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="n"
                    android:textAllCaps="false"
                    android:onClick="click"
                    android:layout_margin="5dp"
                    android:text="n"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:tag="o"
                    android:onClick="click"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:text="o"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/toggle"
        android:text="!"/>


</LinearLayout>